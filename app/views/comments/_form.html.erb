<div class="comment">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>Commenter:
  <% if user_signed_in? %>
  <%= current_user.email %>
  <% else %>Anonymous 
  <% end %><br />
    
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>