<div class="comment">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p><strong>Commenter:</strong>
  <% if user_signed_in? %>
  <%= current_user.email %>
  <% else %>Anonymous 
  <% end %><br />
    
  </p>
  <p>
    <%= f.label 'Text:' %><br />
    <%= f.text_area :body, :rows => 20, :cols => 85 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>