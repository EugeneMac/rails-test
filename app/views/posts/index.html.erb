<div>
<h2 align="left">Posts</h2>
<div align="left"><%= link_to 'New post', new_post_path %></div>
<table cellspacing="10em">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Control</th>
    <th></th>
    <th></th>
    <th>Tags</th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><% post.tags.each do |t| %>
    	<b>
      		<%=	t.name %>
      	</b>
      	<%	end  %>
    </td>                
  </tr>
<% end %>
</table>
<%= will_paginate @posts %>
</div>
